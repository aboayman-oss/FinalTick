<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Countdown block -->
    <LinearLayout
        android:id="@+id/timerBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/widgetRefreshBtn"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Deadline Title)"
            android:textColor="@color/onSurface"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

        <!-- New: Deadline Date -->
        <TextView
            android:id="@+id/widgetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, Apr 29 Â· 10:00 PM"
            android:textColor="@color/onSurface"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="2dp"
            android:gravity="center" />

        <!-- Timer -->
        <TextView
            android:id="@+id/widgetTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00:00"
            android:textColor="@color/onSurface"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/widgetProgressBar"
            android:layout_width="120dp"
            android:layout_height="6dp"
            android:layout_marginTop="8dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="40"
            android:max="100"
            android:progressDrawable="@drawable/widget_progress_bar" />

        <!-- Percentage Text -->
        <TextView
            android:id="@+id/widgetProgressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="34%"
            android:textSize="12sp"
            android:textColor="@color/onSurface"
            android:fontFamily="sans-serif"
            android:gravity="center" />

    </LinearLayout>

    <!-- Refresh Icon -->
    <ImageView
        android:id="@+id/widgetRefreshBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:src="@drawable/refresh_cycle_normal"
        android:contentDescription="Refresh"
        app:tint="@color/onSurface" />
</RelativeLayout>
